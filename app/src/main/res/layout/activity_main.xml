<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.aula_7.miaplicacion.MainActivity">

    <RelativeLayout
        android:id="@+id/RR1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/darker_gray">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <ImageView
            android:id="@+id/paisaje"
            android:layout_width="wrap_content"
            android:layout_height="260dp"
            android:background="@drawable/paisaje"/>

        <TextView
            android:id="@+id/texto1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="42"
            android:textSize="30dp"
            android:layout_marginLeft="30dp"
            android:layout_below="@id/paisaje"
            android:weightSum="1"
            android:textStyle="bold"
            android:textColor="@android:color/holo_blue_dark"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Stories"
            android:textSize="20dp"
            android:layout_marginLeft="20dp"
            android:layout_below="@id/texto1"
            android:weightSum="1"
            android:textStyle="bold"
            />

        <TextView
            android:id="@+id/texto2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="517"
            android:textSize="30dp"
            android:layout_centerInParent="true"
            android:layout_below="@id/paisaje"
            android:weightSum="1"
            android:background="c"
            android:textStyle="bold"
            android:textColor="@android:color/holo_blue_dark"
            />

        <TextView
            android:id="@+id/textfoll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Followers"
            android:textSize="20dp"
            android:layout_centerInParent="true"
            android:layout_below="@id/texto2"
            android:weightSum="1"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/texto3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="284"
            android:textSize="30dp"
            android:layout_below="@id/paisaje"
            android:layout_alignParentRight="true"
            android:layout_marginRight="40dp"
            android:weightSum="1"
            android:background="c"
            android:textStyle="bold"
            android:textColor="@android:color/holo_blue_dark"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Following"
            android:textSize="20dp"
            android:layout_below="@id/texto3"
            android:layout_marginLeft="275dp"
            android:weightSum="1"
            android:textStyle="bold"/>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/textfoll">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_margin="10dp"
                        android:padding="10dp"
                        android:background="@android:color/holo_blue_dark">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/icono5"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/texto_1"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="10dp"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            android:textColor="@android:color/white"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_margin="10dp"
                            android:padding="10dp"
                            android:background="@android:color/holo_blue_bright">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@drawable/icono1"
                                />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/str_2"
                                android:layout_gravity="center_vertical"
                                android:layout_marginLeft="10dp"
                                android:textSize="20sp"
                                android:textStyle="bold"
                                android:textColor="@android:color/white"/>
                        </LinearLayout>


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:layout_margin="10dp"
                                android:padding="10dp"
                                android:background="@android:color/holo_red_light">

                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:background="@drawable/icono2"/>

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="@string/str_4"
                                    android:layout_gravity="center_vertical"
                                    android:layout_marginLeft="10dp"
                                    android:textSize="20sp"
                                    android:textStyle="bold"
                                    android:textColor="@android:color/white"/>
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal"
                                    android:layout_margin="10dp"
                                    android:padding="10dp"
                                    android:background="@android:color/holo_green_light">

                                    <ImageView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:background="@drawable/icono3"/>

                                    <TextView
                                        android:id="@+id/texto4"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:text="@string/str_4"
                                        android:layout_gravity="center_vertical"
                                        android:layout_marginLeft="10dp"
                                        android:textSize="20sp"
                                        android:textStyle="bold"
                                        android:textColor="@android:color/white"/>


                                </LinearLayout>
                                <TextView
                                    android:id="@+id/texto5"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="@string/str_5"
                                    android:layout_gravity="center_vertical"
                                    android:layout_marginLeft="10dp"
                                    android:textSize="15dp"
                                    android:textStyle="bold"
                                    android:textColor="@android:color/white"
                                    />
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </ScrollView>
        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>